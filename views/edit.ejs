<% include partials/header.ejs %>
    <div class="container">
        <div class="row"> 
            <h1 style="text-align:center;">Edit<%= restaurant.restaurantName %> </h1>
            <div class="" style="width: 30%; margin: 25px auto;">
                <form action="/restaurants/<%= restaurant._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" value="<%= restaurant.restaurantName %>" name="restaurant[restaurantName]" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="image">Image Url</label>
                        <input class="form-control" type="text" value="<%= restaurant.restaurantImage %>" name="restaurant[imageUrl]" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." value="<%= campground.image %>" required>
                        <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>    
                    </div>
                    <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" type="text" name="restaurant[description]" placeholder="Restaurant Description"><%= restaurant.description %></textarea>   
                    </div>
                    <div class="form-group">
                            <label for="address">Address</label>
                            <input class="form-control" type="text" value="<%= restaurant.address %>" name="restaurant[address]" placeholder="Restaurant Address">    
                    </div>
                    <div class="form-group">
                            <label for="price">Price</label>
                            <input class="form-control" type="number" value="<%= restaurant.price %>" name="restaurant[price]" placeholder="Price">    
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update!</button>
                    </div>
                </form>
                <a href="/restaurants">Go Back</a>
            </div>
        </div>
    </div>
<% include partials/footer.ejs %>