<% include partials/header.ejs %>
    <div class="container">
        <div class="row"> 
            <h1 style="text-align:center;">Add new Restaurant</h1>
            <div class="" style="width: 30%; margin: 25px auto;">
                <form action="/restaurants" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Add new restaurant" name="restaurantName">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Image URL" name="imageUrl">    
                    </div>
                    <div class="form-group">
                            <textarea class="form-control" type="text" placeholder="description" name="description"></textarea>   
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="text" placeholder="address" name="address">    
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="number" placeholder="Price" name="price" min="1" step="1">    
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/restaurants">Go Back</a>
            </div>
        </div>
    </div>
<% include partials/footer.ejs %>