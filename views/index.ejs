<% include partials/header.ejs %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1><span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span>FoodTopia</h1>
                <p>Have a look at the amazing canteens of NSUT!</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/restaurants/new">Add New Canteens</a>
                </p>
            </div>
        </header>

        <div class="row text-center" style="display: flex; flex-wrap:wrap">
            <% restaurantDatas.forEach(function(restaurants){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= restaurants.restaurantImage %>" alt="picture">
                        <div class="caption">
                                <h4><%= restaurants.restaurantName %></h4>
                        </div>
                        <p>
                            <a href="/restaurants/<%= restaurants._id %>" class="btn btn-primary">View More</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>

    </div>

<% include partials/footer.ejs %>